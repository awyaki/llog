// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Content {
  id Int @id @default(autoincrement())
  name String
  createdAt DateTime @default(now())
  commitedAt DateTime?
  tags Tag[]
  notes Note[]
  blocks Block[]
  log Log[]
}

// origin field has markdown style data
// transformed field has html syle data to reduce calculation of tramsformation
model Note {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  commitedAt DateTime?
  blocks Block[]
  tags Tag[]
  log Log[]
  origin String
  transformed String
  content Content @relation(fields: [contentId], references: [id])
  contentId Int
}

model Tag {
  id  Int @id @default(autoincrement())
  name String
  content Content? @relation(fields: [contentId], references: [id])
  contentId Int?
  note Note? @relation(fields: [noteId], references: [id])
  noteId Int?
}

model Block {
  id Int @id @default(autoincrement())
  unitNumber Int
  level Int
  createdAt DateTime @default(now())
  commitedAt DateTime?
  content Content @relation(fields: [contentId], references: [id])
  contentId Int
  notes Note[]
}

model Log {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  markdown String
  html String
  blocks BlockForLog[]
  tags TagForLog[]
  contentName String
  content Content? @relation(fields: [contentId], references: [id])
  contentId Int?
  note Note? @relation(fields: [noteId], references: [id])
  noteId Int?
}

model BlockForLog {
  id Int @id @default(autoincrement())
  unitNumber Int
  level Int
  createdAt DateTime @default(now())
  logs Log[]
}

model TagForLog {
  id Int @id @default(autoincrement())
  name String
  logs Log[]
}
